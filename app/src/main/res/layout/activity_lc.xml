<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LCActivity"
    android:orientation="vertical"
    android:background="@drawable/back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#323B55">

        <ImageView
            android:id="@+id/usrface"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/usrname"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:layout_alignBottom="@+id/usrface"
            android:layout_alignParentStart="true"
            android:text="Дата регистрации: dd/MM/yyyy"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Вы авторизованы, как %USER%"
            android:textColor="#fff" />
    </RelativeLayout>
    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="#5f70a3"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="сделать снимок"
        />
</LinearLayout>