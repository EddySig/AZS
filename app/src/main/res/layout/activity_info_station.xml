<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoStationActivity"
    android:background="@drawable/back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/labelStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gasstation"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Район:"
            android:textColor="#fff"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес:"
            android:textColor="#fff"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Марка:"
            android:textColor="#fff"
            android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/districtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дзержинский"
                android:textColor="#fff"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/adressInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ул. Докучаева"
                android:textColor="#fff"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/labelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лукойл"
                android:textColor="#fff"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>



</LinearLayout>